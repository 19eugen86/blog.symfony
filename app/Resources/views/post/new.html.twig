{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="row mt-3 mb-2">
                <div class="col-md-12 text-left">
                    <h4>New post</h4>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-12 text-left">
                    {{ form_start(form) }}
                        {{ form_errors(form.title) }}
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control mb-3'}}) }}

                        {{ form_errors(form.body) }}
                        {{ form_label(form.body) }}
                        {{ form_widget(form.body, {'attr': {'class': 'form-control mb-3'}}) }}

                        {{ form_errors(form.categories) }}
                        {{ form_label(form.categories) }}
                        {{ form_widget(form.categories, {'attr': {'class': 'form-control mb-3'}}) }}

                        <input class="btn btn-primary mt-2" type="submit" value="Create" />
                    {{ form_end(form) }}
                </div>
            </div>
            <a href="{{ path('admin_post_index') }}" class="text-center new-account">Back to the list</a>
            <hr>
        </div>
    </div>
</div>
{% endblock %}
