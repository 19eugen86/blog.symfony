{% extends 'base.html.twig' %}

{% block body %}
<div class="container mb-3">
    <div class="row col-md-12">
        <div class="col-md-8">
            <div class="row">
                <!-- Post Content Column -->
                <div class="col-lg-12">

                    <!-- Title -->
                    <h1 class="mt-4">{{ post.title }} <a href="{{ path('admin_post_edit', { 'id': post.id }) }}"><i class="fas fa-pencil-alt"></i></a></h1>

                    <!-- Author -->
                    <p class="lead">
                        by
                        <a href="{{ path('fos_user_profile_show') }}">{{ post.user.username }}</a>
                    </p>

                    <hr>

                    <!-- Date/Time -->
                    <p>Posted on {{ post.postedOn|date("F jS \\a\\t g:ia") }}</p>

                    <hr>

                    <!-- Preview Image -->
                    {#<img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">#}
                    {#<hr>#}

                    <!-- Post Content -->
                    <p>{{ post.body }}</p>

                    <hr>

                    <a href="{{ path('admin_post_index') }}">Back to the list</a>
                </div>
            </div>
        </div>
        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">
            {{ include('admin/sidebar.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
