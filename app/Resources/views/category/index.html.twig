{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/pagination.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="row mt-3 mb-2">
                <div class="col-md-11 text-left">
                    <h4>Categories list</h4>
                </div>
                <div class="col-md-1 text-right mt-2">
                    <a href="{{ path('admin_category_new') }}" title="Add new category"><i class="fas fa-plus"></i></a>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">{{ knp_pagination_sortable(categories, '#', 'id') }}</th>
                                <th scope="col">{{ knp_pagination_sortable(categories, 'Title', 'title') }}</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.title }}</td>
                                <td>
                                    <a href="{{ path('admin_category_edit', { 'id': category.id }) }}" title="Edit"><i class="fas fa-pencil-alt"></i></a>
                                    <a href="{{ path('admin_category_delete', { 'id': category.id }) }}" title="Delete"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="pagination col-md-12 text-left mb-3">
                        {{ knp_pagination_render(categories) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            {{ include('admin/sidebar.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
